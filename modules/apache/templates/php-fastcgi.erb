<IfModule mod_fcgid.c>
  AddHandler fcgid-script .php
  FcgidWrapper /usr/bin/php5-cgi .php
  FcgidCmdOptions /usr/bin/php5-cgi \
  InitialEnv PHP_FCGI_MAX_REQUESTS=2000 \
  InitialEnv PHP_FCGI_CHILDREN=0 \
  MaxProcesses <%= max_processes %> \
  IOTimeout 90 \
  IdleTimeout 100 \
  MaxRequestsPerProcess 1900
  <Files *.php>
    Options +ExecCGI 
  </Files>
</IfModule>
