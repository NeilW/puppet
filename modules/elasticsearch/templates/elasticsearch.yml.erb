# This file is managed by puppet

cluster.name: <%= cluster_name %>
node.name: <%= hostname %>
node.master: <%= master %>
node.data: <%= data %>
gateway.type: local
<% if expected_nodes %>
gateway.expected_nodes: <%= expected_nodes %>
<% end %>
<% if recover_after_nodes %>
gateway.recover_after_nodes: <%= recover_after_nodes %>
<% end %>
<% if recover_after_time -%>
gateway.recover_after_time: <%= recover_after_time %>
<% end -%>

discovery.zen.minimum_master_nodes: <%= minimum_master_nodes %>
discovery.zen.ping.timeout: <%= ping_timeout %>

discovery.zen.ping.unicast.hosts: [<%= discovery_hosts.collect {|h| '"%s"' % h}.join(', ') %>]
